<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE sqlMap      
    PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"      
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="B001005">

	<select id="selectUserM"
		resultClass="jp.terasoluna.batch.lite.functionsample.b001.B001004Param">
		SELECT USER_ID AS id, USER_PW AS password, USER_NAME AS name FROM USER_M
	</select>

	<update id="updateUserM" parameterClass="jp.terasoluna.batch.lite.functionsample.b001.B001004Param">
	    UPDATE USER_M SET USER_NAME=#name# WHERE USER_ID = #id#
	</update>


</sqlMap>